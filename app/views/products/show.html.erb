<h1>Products#show</h1>
<p>Find me in app/views/products/show.html.erb</p>
<hr>
<h1><%= @product.name %></h1>

<dl>
  <dt>Description</dt>
  <dd><%= @product.description %></dd>
  <dt>Price</dt>
  <dd><%= @product.price %></dd>
  <dt>Stock</dt>
  <dd><%= @product.stock %></dd>
</dl>


<%= form_for @line_item do |f| %> 
  <%= f.number_field :quantity %> 
  <%= f.hidden_field :product_id %> 
  <%= f.submit 'Add to Cart' %>
<% end %>